@model List<StudentWebApp.Models.StudentModel>

@{
    ViewBag.Title = "AllStudentList";
}

<h2>AllStudentList</h2>

<p>
    @Html.ActionLink("Create New", "AddStudent")
</p>
<table  id="studenttable" class="table table-colored-bordered table-bordered-purple table-bordered nowrap">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Enroll Date
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnrollDate )
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
            @Html.ActionLink("Edit","EditStudent", new { id=item.ID }) |
            @Html.ActionLink("Details", "ViewStudentdata", new { id=item.ID }) |
            @Html.ActionLink("Delete", "DeleteStudent", new { id=item.ID })
        </td>
    </tr>
}
</table>

